<script type="text/javascript">
    window.onload = function () {
        console.log("Inside window");
        document.getElementById('contact-form').addEventListener('submit', function (event) {
            event.preventDefault();
            console.log("Inside");
            emailjs.send("service_ob9hmr5", "template_mx9n10a", {
                from_first_name: document.getElementById("first-name").value,
                from_last_name: document.getElementById("last-name").value,
                to_name: document.getElementById("to-name").value,
                message: document.getElementById("message-body").value,
                reply_to: document.getElementById("reply-to").value,
                mail_subject:document.getElementById("mail-subject").value,
            }).then(function () {
                console.log('SUCCESS!');
            }, function (error) {
                console.log('FAILED...', error);
            });
        });
    }

</script>

